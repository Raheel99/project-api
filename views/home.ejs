  <script type="text/javascript">
    var navLists = document.getElementById("nav-lists");
    navLists.style.maxHeight = "0px";

    function toggle() {
      if (navLists.style.maxHeight == "0px") {
        navLists.style.maxHeight = "125px";
      } else {
        navLists.style.maxHeight = "0px";
      }
    }

    const button1 = document.getElementById("the-button");

    button1.addEventListener("click", clickHandler);

    function clickHandler(e) {
      e.preventDefault();
      const href = this.getAttribute("href");
      const offsetTop = document.querySelector(href).offsetTop;

      scroll({
        top: offsetTop,
        behavior: "smooth"
      });
    }

    const count = document.getElementById("page-count");

    // count.addEventListener("load", updateVisitCount);
    updateVisitCount();

    function updateVisitCount() {
      fetch("https://api.countapi.xyz/update/herokuapp/youtube/?amount=1").then(res => res.json()).then(res => {
        count.innerHTML = res.value;
      });
    }
  </script>
</body>

</html>
